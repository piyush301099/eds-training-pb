{
  "definitions": [
    {
      "title": "Two Column With Image",
      "id": "two-column-with-image",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Two Column With Image",
              "model": "two-column-with-image"
            }
          }
        }
      }
    }
  ],
  "filters": [],
  "models": [
    {
      "id": "two-column-with-image",
      "fields": [
        {
          "component": "select",
          "name": "imagePlacement",
          "label": "Image Placement",
          "description": "Select the appropriate column for image placement   â“˜ Image will always be displayed at the top in mobile view",
          "value": "left",
          "required": true,
          "options": [
            {
              "name": "Left",
              "value": "left"
            },
            {
              "name": "Right",
              "value": "right"
            }
          ]
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image",
          "required": true,
          "description": "Upload image for the Two Column with Image"
        },
        {
          "component": "text",
          "name": "altImage",
          "label": "Image Alt text",
          "valueType": "string",
          "description": "Pick alt text from AEM DAM with ability to override it"
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "icon",
          "label": "Icon",
          "description": "Upload icon for the Two Column with Image"
        },
        {
          "component": "text",
          "name": "alt",
          "label": "Icon Alt text",
          "valueType": "string",
          "description": "Pick alt text from AEM DAM with ability to override it"
        },
        {
          "component": "text",
          "name": "text",
          "label": "Title",
          "required": true,
          "valueType": "string",
          "description": "Enter the title"
        },
        {
          "component": "richtext",
          "name": "rte",
          "label": "Description",
          "valueType": "string",
          "description": "Enter the description"
        },
        {
          "component": "select",
          "name": "ctaTypeField",
          "label": "CTA Type",
          "description": "Select the type of CTA for component",
          "value": "button",
          "options": [
            {
              "name": "Button",
              "value": "button"
            },
            {
              "name": "Text Link",
              "value": "textLink"
            }
          ]
        },
        {
          "component": "text",
          "name": "ctaText",
          "label": "CTA Text",
          "valueType": "string",
          "description": "Enter label to display on the CTA"
        },
        {
          "component": "select",
          "name": "ctaType",
          "label": "CTA Type",
          "description": "Select the CTA Type",
          "options": [
            {
              "name": "Link",
              "value": "link"
            },
            {
              "name": "Asset (PDF/Image)",
              "value": "asset"
            }
          ],
          "condition": {
            "!!": { "var": "ctaText" }
          }
        },
        {
          "component": "aem-content",
          "name": "ctaLink",
          "label": "CTA Link",
          "valueType": "string",
          "description": "Enter the URL to navigate when CTA is clicked",
          "validation": {
            "rootPath": "/content"
          },
          "condition": { "===": [{ "var": "ctaType" }, "link"] }
        },
        {
          "component": "reference",
          "name": "ctaAsset",
          "label": "Asset (PDF/Image)",
          "description": "Upload the Asset (PDF/Image)",
          "valueType": "string",
          "condition": { "===": [{ "var": "ctaType" }, "asset"] }
        },
        {
          "component": "text",
          "name": "two-column-aria-label",
          "label": "ARIA Label",
          "valueType": "string",
          "description": "Enter ARIA label to comply ADA"
        },
        {
          "component": "select",
          "name": "targetPath",
          "label": "Target Path",
          "description": "Select the target path for the authored CTA URL",
          "value": "sameTab",
          "options": [
            {
              "name": "Same Tab",
              "value": "sameTab"
            },
            {
              "name": "New Tab",
              "value": "newTab"
            }
          ],
          "condition": { "===": [{ "var": "ctaType" }, "link"] }
        },
        {
          "component": "checkbox-group",
          "label": "Checkbox Group",
          "name": "checkbox",
          "valueType": "string",
          "description": "Select this checkbox to enable the modal experience that notifies user that they are leaving the site",
          "options": [
            {
              "name": "Exit Interstitial",
              "value": "true"
            }
          ],
          "condition": { "===": [{ "var": "ctaType" }, "link"] }
        }
      ]
    }
  ]
}
